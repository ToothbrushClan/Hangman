<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/addWordsLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="1dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:paddingLeft="24dp"
            android:text="@string/editTextQuestionHint"/>

        <EditText
            android:id="@+id/questionEditText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:singleLine="true"
            android:maxLines="1"
            android:lines="1"
            android:maxLength="20"
            android:hint="@string/editTextQuestionHint"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addWordsLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/addWordsLayout1"
        android:padding="1dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:paddingLeft="24dp"
            android:text="@string/editTextHintHint"/>

        <EditText
            android:id="@+id/hintEditText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:singleLine="true"
            android:maxLines="1"
            android:lines="1"
            android:maxLength="60"
            android:hint="@string/editTextHintHint"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addWordsLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/addWordsLayout2"
        android:padding="1dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:paddingLeft="24dp"
            android:text="@string/editTextDifficultyHint"/>

        <Spinner
            android:id="@+id/spinnerDifficultyLevel"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/btn_dropdown"
            style="@android:style/Widget.Spinner"
            android:spinnerMode="dropdown" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addWordsLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/addWordsLayout3"
        android:padding="1dp" >

        <Button
            android:id="@+id/addWordButton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:background="@android:color/transparent"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/addCustomWord"/>


    </RelativeLayout>

</RelativeLayout>