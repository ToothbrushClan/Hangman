<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toothbrushclan.hangman" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartGameActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutUsActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:parentActivityName=".StartGameActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartGameActivity"/>
        </activity>
        <activity
            android:name=".SelectCategoryActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:parentActivityName=".StartGameActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartGameActivity"/>
        </activity>
        <activity
            android:name=".HangmanActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:parentActivityName=".SelectCategoryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SelectCategoryActivity"/>
        </activity>
    </application>

</manifest>
